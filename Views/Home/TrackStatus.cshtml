@{
    ViewData["Title"] = "Track Claim Status";
}

<!-- Importing Font Awesome for icons and Google Fonts for Poppins -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<!-- Custom Styles for Dark Theme -->
<style>
    body {
        background-color: #000; /* Black background */
        color: #fff; /* White font */
        font-family: 'Poppins', sans-serif; /* Poppins font */
    }

    h1, h2, h3, p, label {
        color: #fff; /* Ensure all headings, labels, and text are white */
    }

    .container {
        padding: 20px;
    }

    .infographics {
        color: #fff;
        font-size: 50px;
        margin-bottom: 15px;
    }

    .instructions {
        background-color: #111;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .form-container {
        background-color: #111;
        padding: 30px;
        border-radius: 10px;
    }

    .table {
        background-color: #222;
        color: #fff;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

        .table th, .table td {
            padding: 15px;
            text-align: center;
        }

        .table th {
            background-color: #333;
        }

        .table td {
            background-color: #444;
            border-bottom: 2px solid #555;
        }

    .icon-lg {
        font-size: 3rem;
        color: #007bff;
    }

    .step {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .step .icon-lg {
            margin-right: 15px;
        }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496;
            transform: scale(1.05);
        }
</style>

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4">Track Your Claim Status</h1>
        <p class="lead">Follow the steps below to track the status of your submitted claims and stay updated.</p>
    </div>

    <!-- Instructions Section with Infographics -->
    <div class="instructions">
        <h2 class="mb-4">How to Track Your Claim Status</h2>

        <!-- Step 1: View Submitted Claims -->
        <div class="step">
            <i class="fas fa-eye icon-lg"></i>
            <div>
                <h4>Step 1: View Your Submitted Claims</h4>
                <p>All your submitted claims will be listed below. You can check the status of each claim and see any updates made by the administrator.</p>
            </div>
        </div>

        <!-- Step 2: Check Status -->
        <div class="step">
            <i class="fas fa-info-circle icon-lg"></i>
            <div>
                <h4>Step 2: Check Status</h4>
                <p>The status of your claim will be marked as <strong>Pending</strong>, <strong>Approved</strong>, or <strong>Rejected</strong>. Keep track of this information for each claim.</p>
            </div>
        </div>

        <!-- Step 3: Take Action -->
        <div class="step">
            <i class="fas fa-tasks icon-lg"></i>
            <div>
                <h4>Step 3: Take Action (If Required)</h4>
                <p>If additional documents or information are needed, you’ll be notified. Submit any additional materials requested to complete your claim.</p>
            </div>
        </div>
    </div>

    <!-- Claim Status Table -->
    <div class="form-container">
        <h2 class="text-center">Your Submitted Claims</h2>
        <p class="text-center">Below is the list of your claims with their current status.</p>

        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Total Hours</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example claim row -->
                <tr>
                    <td>August 2024</td>
                    <td>30</td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td><a href="#" class="btn btn-info">View Details</a></td>
                </tr>
                <tr>
                    <td>September 2024</td>
                    <td>25</td>
                    <td><span class="badge bg-warning text-dark">Pending</span></td>
                    <td><a href="#" class="btn btn-info">View Details</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
